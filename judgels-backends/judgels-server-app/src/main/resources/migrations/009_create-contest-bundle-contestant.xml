<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="2025-03-13-create-contest-bundle-contestant" author="arvinciu">
        <createTable tableName="uriel_contest_bundle_contestant">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="bundleJid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="userJid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="createdAt" type="datetime(3)">
                <constraints nullable="false"/>
            </column>
            <column name="createdBy" type="VARCHAR(32)"/>
            <column name="createdIp" type="VARCHAR(100)"/>
            <column name="updatedAt" type="datetime(3)">
                <constraints nullable="false"/>
            </column>
            <column name="updatedBy" type="VARCHAR(32)"/>
            <column name="updatedIp" type="VARCHAR(100)"/>
        </createTable>

        <createIndex indexName="contest_bundle_contestant_index" tableName="uriel_contest_bundle_supervisor" unique="true">
            <column name="bundleJid"/>
            <column name="userJid"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>